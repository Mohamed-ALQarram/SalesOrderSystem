@model Order


<div class="container mt-5">
    <div class="card shadow-lg rounded-3 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-receipt-cutoff"></i> Order Details
            </h4>
        </div>

        <div class="card-body">
            <!-- Order Info -->
            <dl class="row">
                <dt class="col-sm-3">Order ID</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Customer ID</dt>
                <dd class="col-sm-9">@Model.CustomerId</dd>

                <dt class="col-sm-3">Order Status</dt>
                <dd class="col-sm-9">
                    <span class="badge 
                        @(Model.OrderStatus == Models.Enums.OrderStatus.Pending ? "bg-warning text-dark" :
                          Model.OrderStatus == Models.Enums.OrderStatus.PAID ? "bg-success" : "bg-secondary")">
                        @Model.OrderStatus
                    </span>
                </dd>

                <dt class="col-sm-3">Total Price</dt>
                <dd class="col-sm-9 fw-bold text-success">
                    $@Model.TotalPrice
                </dd>
            </dl>

            <!-- Items Table -->
            <h5 class="mt-4">Items</h5>
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Item Id</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.Quantity</td>
                            <td>$@item.SalePrice</td>
                            <td>$@(item.Quantity * item.SalePrice)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer Actions -->
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>

            @if (Model.OrderStatus == Models.Enums.OrderStatus.Pending)
            {
                <a asp-action="PayOrder" asp-route-id="@Model.OrderId" class="btn btn-success">
                    <i class="bi bi-credit-card"></i> Pay Now
                </a>
            }
        </div>
    </div>
</div>
