@model List<Order>

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">🛒 Orders</h2>
        <a asp-action="CreateOrder" asp-controller="Order"
           class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Order
        </a>
    </div>

    <!-- Orders Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var order in Model)
            {
                <div class="col-lg-6 col-md-12">
                    <div class="card shadow-sm border-0 h-100">
                        <!-- Card Header -->
                        <div class="card-header text-white" style="background: linear-gradient(90deg, #0d6efd, #0a58ca);">
                            <h5 class="mb-0">Order #@order.OrderId</h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle">
                                    <tbody>
                                        <tr>
                                            <th>Date</th>
                                            <td>@order.Date.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>Total Price</th>
                                            <td>$@order.TotalPrice</td>
                                        </tr>
                                        <tr>
                                            <th>Status</th>
                                            <td>
                                                @if (order.OrderStatus.HasValue)
                                                {
                                                    <span class="badge bg-success">@order.OrderStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Customer ID</th>
                                            <td>@order.CustomerId</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Actions -->
                            <div class="mt-3 d-flex justify-content-between">
                                <!-- Left side: Pay button -->
                                <div>
                                    @if (order.OrderStatus == Models.Enums.OrderStatus.Pending)
                                    {
                                        <a asp-action="PayOrder" asp-route-id="@order.OrderId" class="btn btn-success">
                                            <i class="bi bi-credit-card"></i> Pay Now
                                        </a>
                                    }
                                </div>

                                <!-- Right side: other actions -->
                                <div class="d-flex gap-2">
                                    <a asp-action="ViewOrder" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>

                                    <a asp-action="EditOrder" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>

                                    <a asp-action="DeleteOrder" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Are you sure you want to delete this order?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted fst-italic">No orders available.</p>
            </div>
        }
    </div>
</div>
