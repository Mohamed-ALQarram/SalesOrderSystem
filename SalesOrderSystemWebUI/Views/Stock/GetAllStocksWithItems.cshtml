@model List<Stock>

<style>
    .stock-items-container {
        max-height: 400px;
        overflow-y: auto;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }
    
    .stock-items-container::-webkit-scrollbar {
        width: 8px;
    }
    
    .stock-items-container::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }
    
    .stock-items-container::-webkit-scrollbar-thumb {
        background: #0d6efd;
        border-radius: 10px;
    }
    
    .stock-items-container::-webkit-scrollbar-thumb:hover {
        background: #0a58ca;
    }
    
    .stock-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .stock-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
    }
    
    .items-count-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }
    
    .empty-stock {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border: 2px dashed #dee2e6;
        min-height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }
    
    
</style>

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">📦 Stocks and Items</h2>
            <p class="text-muted mb-0">Manage your inventory across @Model.Count stock locations</p>
        </div>
        <a asp-action="AddItemToStock" asp-controller="Stock"
           class="btn btn-primary shadow-sm px-4">
            <i class="bi bi-plus-circle me-2"></i> Add New Item
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-1">@Model.Count</h3>
                    <small>Total Stocks</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-1">@Model.Sum(s => s.StockItems?.Count ?? 0)</h3>
                    <small>Total Items</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-1">@Model.Sum(s => s.StockItems?.Sum(i => i.Quantity) ?? 0)</h3>
                    <small>Total Quantity</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Stocks Grid -->
    <div class="row g-4">
        @foreach (var stock in Model)
        {
            <div class="col-xl-6 col-lg-12">
                <div class="card stock-card shadow-sm border-0 h-100 position-relative">
                    <div class="card-header text-white position-relative" style="background: linear-gradient(135deg, #0d6efd, #0a58ca, #6610f2);">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-box-seam me-2"></i>Stock #@stock.StockId
                            </h5>
                            @if (stock.StockItems != null && stock.StockItems.Any())
                            {
                                <span class="badge bg-white text-primary">
                                    @stock.StockItems.Sum(i => i.Quantity) units
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body p-0">
                        @if (stock.StockItems != null && stock.StockItems.Any())
                        {
                            <div class="stock-items-container">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th class="px-3 py-3">
                                                <i class="bi bi-hash text-muted me-1"></i>ID
                                            </th>
                                            <th class="px-3 py-3">
                                                <i class="bi bi-tag text-muted me-1"></i>Product Name
                                            </th>
                                            <th class="px-3 py-3 text-center">
                                                <i class="bi bi-boxes text-muted me-1"></i>Qty
                                            </th>
                                            <th class="px-3 py-3 text-center">
                                                <i class="bi bi-gear text-muted me-1"></i>Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in stock.StockItems)
                                        {
                                            <tr>
                                                <td class="px-3 py-2">
                                                    <span class="badge bg-light text-dark">@item.ProductId</span>
                                                </td>
                                                <td class="px-3 py-2">
                                                    <div class="fw-medium">@item.Product?.ProductName</div>
                                                </td>
                                                <td class="px-3 py-2 text-center">
                                                    <span class="badge bg-primary-subtle text-primary px-3">
                                                        @item.Quantity
                                                    </span>
                                                </td>
                                                <td class="px-3 py-2 text-center">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="EditItem" asp-controller="StockItem"
                                                           asp-route-Id="@item.Id"
                                                           asp-route-ProductId="@item.ProductId"
                                                           asp-route-StockId="@item.StockId"
                                                           asp-route-Quantity="@item.Quantity"
                                                           class="btn btn-outline-primary"
                                                           title="Edit Item">
                                                           <i class="bi bi-pencil-square"> </i>Edit
                                                        </a>
                                                        @Html.ActionLink("Delete", "RemoveItem", "StockItem", new { Id = item.Id },
                                                        new {
                                                            onclick = "return confirm('Are you sure you want to delete this product?');",
                                                            @class="btn btn-outline-danger",
                                                            title="Delete Item"
                                                        })
                                                        <i class="bi bi-trash"></i>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="stock-empty-state m-3">
                                <div class="text-center">
                                    <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                                    <p class="text-muted mb-2">No items in this stock</p>
                                    <a asp-action="AddItemToStock" asp-controller="Stock" 
                                       asp-route-stockId="@stock.StockId"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-plus-circle me-1"></i> Add First Item
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (stock.StockItems != null && stock.StockItems.Any())
                    {
                        <div class="card-footer bg-light border-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    @stock.StockItems.Count item(s) • @stock.StockItems.Sum(i => i.Quantity) total units
                                </small>
                                <a asp-action="AddItemToStock" asp-controller="Stock" 
                                   asp-route-stockId="@stock.StockId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-plus-circle me-1"></i> Add Item
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted mb-4"></i>
            <h4 class="text-muted mb-3">No stocks found</h4>
            <p class="text-muted mb-4">Get started by creating your first stock location</p>
            <a asp-action="Create" asp-controller="Stock" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i> Create First Stock
            </a>
        </div>
    }
</div>