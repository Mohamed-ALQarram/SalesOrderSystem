@model List<Stock>

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📦 Stocks and Items</h2>
        <a asp-action="AddItemToStock" asp-controller="Stock"
           class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Item
        </a>
    </div>

    <!-- Stocks Grid -->
    <div class="row g-4">
        @foreach (var stock in Model)
        {
            <div class="col-lg-6 col-md-12">
                <div class="card shadow-sm border-0 h-100">
<div class="card-header text-white" style="background: linear-gradient(90deg, #0d6efd, #0a58ca);">
                        <h5 class="mb-0">Stock #@stock.StockId</h5>
                    </div>

                    <div class="card-body">
                        @if (stock.StockItems != null && stock.StockItems.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product Id</th>
                                            <th>Product Name</th>
                                            <th>Quantity</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in stock.StockItems)
                                        {
                                            <tr>
                                                <td>@item.ProductId</td>
                                                <td>@item.Product?.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td class="text-center">
                                                    <a asp-action="EditItem" asp-controller="StockItem"
                                                       asp-route-Id="@item.Id"
                                                       asp-route-ProductId="@item.ProductId"
                                                       asp-route-StockId="@item.StockId"
                                                       asp-route-Quantity="@item.Quantity"
                                                       class="btn btn-sm btn-outline-primary me-2">
                                                       <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    @Html.ActionLink("Delete", "RemoveItem", "StockItem", new { Id = item.Id },
                                                    new {
                                                        onclick = "return confirm('Are you sure you want to delete this product?');",
                                                        @class="btn btn-sm btn-outline-danger"
                                                    })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No items in this stock.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
