@using System.Security.Claims
@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Panel";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Sales Order Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/_Layout.css" />
</head>
<body>
    <!-- Sidebar -->
    @if(User is not null && (User.IsInRole("Admin") || User.IsInRole("Casher")))
    {
        
    <div class="sidebar d-flex flex-column">
        <div class="sidebar-header">
            <h4>
                @(User?.Claims
                ?.Where(c => c.Type == ClaimTypes.Role)?.FirstOrDefault()?.Value) Panel
            </h4>
            <div class="sidebar-subtitle">Sales Management</div>
        </div>
        @if(User!.IsInRole("Admin"))
        {
        <div class="nav-item">
            <a asp-controller="Home" asp-action="Index"
               class="@(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                <i class="fa fa-home me-2"></i> <span>Dashboard</span>
            </a>
        </div>
        }

            <div class="nav-item">
                <a asp-controller="Customer" asp-action="Index"
               class="@(currentController == "Customer" ? "active" : "")">
                <i class="fa fa-users me-2"></i> <span>Customers</span>
            </a>
        </div>
        @if (User.IsInRole("Admin"))
        {

            <div class="nav-item">
                <a asp-controller="Stock" asp-action="GetAllStocksWithItems"
               class="@(currentController == "Stock" ? "active" : "")">
                <i class="fa fa-box me-2"></i> <span>Stock Items</span>
            </a>
        </div>
        }
        <div class="nav-item">
            <a asp-controller="Order" asp-action="Index"
               class="@(currentController == "Order" ? "active" : "")">
                <i class="fa fa-shopping-cart me-2"></i> <span>Orders</span>
            </a>
        </div>
        @if (User.IsInRole("Admin"))
        {
        <div class="nav-item">
            <a asp-controller="Transaction" asp-action="Index"
               class="@(currentController == "Transaction" ? "active" : "")">
                <i class="fa fa-file-invoice-dollar me-2"></i> <span>Transactions</span>
            </a>
        </div>

        <div class="nav-item">
            <a asp-controller="Report" asp-action="Index"
               class="@(currentController == "Report" ? "active" : "")">
                <i class="fa fa-chart-line me-2"></i> <span>Reports</span>
            </a>
        </div>
        }
    </div>
    }

    <!-- Content -->
    <div class="content">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand fw-bold" href="#">Sales Order System</a>
                <div class="d-flex align-items-center">
                    <div class="user-info me-3">
                        <div class="user-avatar">
                            @(User?.Identity?.Name?.Substring(0, 2).ToUpper() ?? "AD")
                        </div>
                        <span>Hello, @(User?.Identity?.Name ?? "Admin")</span>
                    </div>
                    <div class="dropdown me-4">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="settingsMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i>Settings
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsMenu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">
                                    <i class="fa fa-key me-2"></i>Change Password
                                </a>
                            </li>
                            @if(User is not null && User.IsInRole("Admin"))
                            {
                                
                            <li>
                                <a class="dropdown-item" href="@Url.Action("AddRole", "Account")">
                                    <i class="fa fa-user-plus me-2"></i>Add Role
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("ManageUsers", "Admin")">
                                    <i class="fa fa-users-cog me-2"></i>Manage Users
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("SystemLogs", "Admin")">
                                    <i class="fa fa-list me-2"></i>System Logs
                                </a>
                            </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("SignOut", "Account")">
                                    <i class="fa fa-sign-out-alt me-2"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer>
            &copy; @(DateTime.Now.Year) Sales Order System. All rights reserved.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        // Enhanced navigation interactions
        document.querySelectorAll('.sidebar a[asp-controller]').forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.transform = 'translateX(12px)';
            });

            link.addEventListener('mouseleave', function() {
                if (!this.classList.contains('active')) {
                    this.style.transform = 'translateX(0)';
                }
            });
        });

        // Smooth page transitions
        window.addEventListener('beforeunload', function() {
            document.body.style.opacity = '0';
            document.body.style.transform = 'translateY(-20px)';
        });

        // Initialize tooltips if Bootstrap tooltips are needed
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>