@model StockItem

@using Models.Enums

@{
    ViewData["Title"] = "EditStockItem";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h3 class="text-center mb-4">Edit Stock Item</h3>

        @* <form action="/StockItem/SaveEditedItem" method="post"> *@
        <form asp-action="SaveEditedItem" asp-controller="StockItem" method="post">
            <div class="mb-3">
@*                 <label for="Id" class="form-label">Id</label>
                <input type="number" class="form-control" id="Id" name="Id" value="@Model.Id" readonly />
 *@         
                @Html.LabelFor(x => x.Id, new { @class = "form-label" })
                @Html.EditorFor(x => x.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="mb-3">
                <label for="ProductId" class="form-label">Product ID</label>
                <input type="number" class="form-control" id="ProductId" name="ProductId" value="@Model.ProductId" readonly />
            </div>

            <div class="mb-3">
                <label for="StockId" class="form-label">Quantity</label>
                <input type="number" class="form-control" id="StockId" name="StockId" value="@Model.StockId"  readonly />
            </div>

            <div class="mb-3">
@*                 <label for="Quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity"/>
 *@
                @Html.LabelFor(x => x.Quantity, new { @class = "form-label" })
                @Html.EditorFor(x => x.Quantity, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="text-center">
                @Html.ActionLink("Back", "GetAllStocksWithItems", "Stock",null,
                new { @class = "btn btn-primary px-4 shadow-sm" })

                <button type="submit" class="btn btn-primary px-4">Save</button>
            </div>
        </form>
    </div>
</div>
