@{
    ViewData["Title"] = "Admin Dashboard";
}
@model DashboardStatistics
<div class="container-fluid">
    <!-- Summary Cards -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5>Customers</h5>
                    <h3>@Model.customerNo</h3> <!-- dynamic -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5>Stock Items</h5>
                    <h3>@Model.stockItemNo</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <h5>Orders</h5>
                    <h3>@Model.orderNo</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5>Transactions</h5>
                    <h3>@Model.transactionNo</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Section -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">Recent Orders</div>
                <div class="card-body">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model.RecentOrders is not null)
                            {
                                @foreach(var item in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@item.OrderId</td>
                                        <td>@(item.Customer is Person p? p.FullName : item.Customer is Company c ? c.CompanyName : "") </td>
                                        <td>@item.Date</td>
                                        <td>@item.TotalPrice</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">Low Stock Alerts</div>
                <div class="card-body">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Stock Id</th>
                                <th>Product Id</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LowStockAlerts is not null)
                            {
                                @foreach (var item in Model.LowStockAlerts)
                                {
                                    <tr>
                                        <td>@item.StockId</td>
                                        <td>@item.ProductId </td>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.Quantity</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
