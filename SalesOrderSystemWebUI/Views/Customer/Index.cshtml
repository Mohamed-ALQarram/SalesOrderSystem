@model List<Customer>

    @{
    }
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Customers</h2>
        <a asp-action="AddCustomer" asp-controller="Customer"
           class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Customer
        </a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Customer Id</th>
                <th>PhoneNo.</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.phone</td>
                    <td>@item.GetType().Name</td>
                    <td>
                            <a asp-action="CustomerDetails"
                           asp-route-Id="@item.CustomerId"
                           class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil-square"></i> Details
                            </a>

                        <a  asp-action="EditCustomer"
                               asp-route-Id ="@item.CustomerId" 
                               class="btn btn-sm btn-outline-primary me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                            </a>

                        @if(User.IsInRole("Admin"))
                        {

                        <a asp-action="DeleteCustomer"
                           asp-route-Id="@item.CustomerId"
                           class="btn btn-sm btn-outline-danger me-2"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        }
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
